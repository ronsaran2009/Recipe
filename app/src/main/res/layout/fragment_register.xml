<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimaryDark">


    <EditText
        android:id="@+id/register_display"
        android:layout_width="293dp"
        android:layout_height="32dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/ic_action_displayname"
        android:ems="10"
        android:fontFamily="@font/lamoon"
        android:hint="  ชื่อ"
        android:inputType="textPersonName"
        android:textSize="24dp"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/register_repassword"
        android:layout_width="293dp"
        android:layout_height="28dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:fontFamily="@font/lamoon"
        android:hint="  ยืนยันรหัสผ่าน"
        android:inputType="textPassword"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="293dp"
        android:layout_height="32dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:fontFamily="@font/lamoon"
        android:hint="  อีเมล"
        android:inputType="textPersonName"
        android:textSize="24dp"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_display" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="293dp"
        android:layout_height="32dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:fontFamily="@font/lamoon"
        android:hint="  รหัสผ่าน"
        android:inputType="textPassword"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />

    <Button
        android:id="@+id/register_registerbtn"
        android:layout_width="293dp"
        android:layout_height="32dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/button_ok"
        android:fontFamily="@font/lamoon"
        android:text="สมัครสมาชิก"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_repassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/lamoon"
        android:text="สมัครสมาชิก"
        android:textColor="@color/colorPrimary"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>