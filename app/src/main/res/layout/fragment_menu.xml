<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="150dp">

            </android.support.v4.view.ViewPager>



            <RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/cat_boiled"
                    style="@style/Category_Image"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/cat_boiled" />

                <TextView
                    style="@style/Category_Text"
                    android:text="ต้ม - แกง" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/cat_fried1"
                    style="@style/Category_Image"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/cat_fried1" />

                <TextView
                    style="@style/Category_Text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:text="ผัด" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/cat_fried2"
                    style="@style/Category_Image"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cat_fried2" />

                <TextView
                    style="@style/Category_Text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:text="ทอด" />
            </LinearLayout>

            </RelativeLayout>

        </GridLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>