<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimaryDark">

    <!--topic-->
    <TextView
        android:id="@+id/topic_add_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/lamoon"
        android:text="เพิ่มขั้นตอนการทำ"
        android:textColor="@color/colorPrimary"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/step_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_ok"
        android:fontFamily="@font/lamoon"
        android:text="   บันทึก   "
        android:textColor="@color/colorPrimary"
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/topic_add_step"/>

    <!--Link youtube-->
    <TextView
        android:id="@+id/topic_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/lamoon"
        android:text="ลิ้ง Youtube"
        android:textColor="@color/colorFont"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic_add_step" />
    <EditText
        android:id="@+id/step_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:fontFamily="@font/lamoon"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topic_link"
        app:layout_constraintTop_toBottomOf="@id/topic_add_step"
        />

    <!--step-->
    <TextView
        android:id="@+id/topic_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lamoon"
        android:text="วิธีทำ"
        android:textColor="@color/colorFont"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic_link" />

    <Button
        android:id="@+id/add_btn_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/step_topic"
        android:textColorHighlight="@color/colorAccent"
        android:background="@drawable/button_ok"
        android:fontFamily="@font/lamoon"
        android:textColor="@color/colorPrimary"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@id/topic_step"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="230dp"
        app:layout_constraintTop_toBottomOf="@id/add_btn_dynamic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/mLayout_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>