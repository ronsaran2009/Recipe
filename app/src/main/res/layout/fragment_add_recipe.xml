<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimaryDark">


    <EditText
        android:id="@+id/add_recipe_ing"
        android:layout_width="244dp"
        android:layout_height="85dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:fontFamily="@font/lamoon"
        android:hint=""
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/add_recipe_time"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lamoon"
        android:text="วัตถุดิบ"
        android:textColor="@color/colorFont"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/add_recipe_time"
        android:layout_width="245dp"
        android:layout_height="29dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:fontFamily="@font/lamoon"
        android:hint="เวลา (นาที)"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/add_recipe_name"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="81dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lamoon"
        android:text="เวลาที่ใช้"
        android:textColor="@color/colorFont"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lamoon"
        android:text="รูปภาพ"
        android:textColor="@color/colorFont"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />




    <TextView
        android:id="@+id/textView5"
        android:layout_width="81dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/lamoon"
        android:text="ประเภทอาหาร"
        android:textColor="@color/colorFont"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/lamoon"
        android:text="คำอธิบาย"
        android:textColor="@color/colorFont"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lamoon"
        android:text="เพิ่มเมนูใหม่"
        android:textColor="@color/colorPrimary"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lamoon"
        android:text="ชืออาหาร"
        android:textColor="@color/colorFont"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/add_recipe_name"
        android:layout_width="246dp"
        android:layout_height="27dp"

        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:fontFamily="@font/lamoon"
        android:hint="ต้มยำกุ้ง"
        android:inputType="textPersonName"

        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="243dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/add_recipe_desc"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        tools:ignore="MissingConstraints"
        >

        <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="243dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded"
        android:padding="0dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="263dp">

        <Spinner
            android:id="@+id/add_recipe_spinner_type"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="249dp"
            android:layout_height="96dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="-6dp"
            tools:layout_editor_absoluteY="-9dp" />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>


    <EditText
        android:id="@+id/add_recipe_desc"
        android:layout_width="244dp"
        android:layout_height="85dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:fontFamily="@font/lamoon"
        android:hint=""
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/add_recipe_name"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/add_recipe_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_ok"
        android:fontFamily="@font/lamoon"
        android:text="  ขั้นตอนต่อไป >  "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_recipe_ing" />

    <ImageView
        android:id="@+id/add_recipe_img"
        android:layout_width="123dp"
        android:layout_height="81dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_photo" />

    <ImageButton
        android:id="@+id/add_recipe_img_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_action_add"
        app:layout_constraintStart_toEndOf="@+id/add_recipe_img"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>