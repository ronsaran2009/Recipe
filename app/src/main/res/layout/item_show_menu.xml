<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">


        <ImageView
            android:id="@+id/show_menu_img"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cat_baked" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160sp"
                android:gravity="start|bottom">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/show_menu_profile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_girl"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="3dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="168sp"
                android:gravity="bottom"
                android:layout_marginStart="58dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp">

                    <TextView
                        android:id="@+id/show_menu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="น้องกุ้งสามตัว"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/show_menu_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="written by XXX"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!-- Writer's img + name  -->

    </LinearLayout>
</android.support.constraint.ConstraintLayout>